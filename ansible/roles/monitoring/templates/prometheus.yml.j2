global:
  scrape_interval: 15s
  scrape_timeout: 10s
  evaluation_interval: 30s
 
# alerting settings
alerting:
  alertmanagers:
  - follow_redirects: true
    timeout: 10s
    static_configs:
    - targets:
#      - <hostname>:9093
 
# alert rule files
rule_files:
#- /etc/prometheus/rule_files/*.yml
 
# scrape exporter jobs
scrape_configs:
- job_name: 'prometheus'
  static_configs:
    - targets:
      - localhost:9090

- job_name: 'node'
  static_configs:
    - targets:
      - {{ hostvars["app_int"]["ansible_host"] }}:9100
      - {{ hostvars["monitoring_int"]["ansible_host"] }}:9100
      
- job_name: 'cadvisor'
  static_configs:
    - targets:
      - {{ hostvars["app_int"]["ansible_host"] }}:8181
      - {{ hostvars["monitoring_int"]["ansible_host"] }}:8181

- job_name: 'blackbox'
  static_configs:
    - targets:
      - {{ hostvars["app_int"]["ansible_host"] }}:9115


- job_name: 'blackbox-http-app'
  metrics_path: /probe
  params:
    module: [http_2xx]
  static_configs:
    - targets: 
      - http://sna-project.fun:8080
  relabel_configs:
    - source_labels: [__address__]
      target_label: __param_target
    - source_labels: [__param_target]
      target_label: instance
    - target_label: __address__
      replacement: {{ hostvars["app_int"]["ansible_host"] }}:9115